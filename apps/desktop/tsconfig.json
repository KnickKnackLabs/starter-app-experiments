{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "outDir": "dist",
    "paths": {
      "@core/*": ["../../packages/core/src/*"],
      "@/*": ["./src/*"]
    }
  },
  "include": ["src", "forge.config.ts", "forge.env.d.ts", "vite.*.config.ts"]
}
